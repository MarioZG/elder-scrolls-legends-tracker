<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:local="clr-namespace:ESLTracker"
        xmlns:Decks="clr-namespace:ESLTracker.Controls.Decks" x:Class="ESLTracker.MainWindow"
        xmlns:ViewModels="clr-namespace:ESLTracker.ViewModels"
        xmlns:Converters="clr-namespace:ESLTracker.Utils.Converters"
        mc:Ignorable="d"
        x:Name="mainWindow"
        Title="MainWindow" Height="553.805" Width="612.719"
        BorderThickness="2" 
        Closing="Window_Closing">
    <Window.Resources>
        <local:NotifyIconLeftClickCommand x:Key="NotifyIconLeftClickCommand" />
        <local:ExitCommand x:Key="ExitCommand" />
        <local:ShowRewardsCommand x:Key="ShowRewardsCommand" />
        <local:NewDeckCommand x:Key="NewDeckCommand" />
        <local:ShowOverlayCommand x:Key="ShowOverlayCommand" />
        <Converters:BoolToVisibiltyCollapsedConverter x:Key="BoolToVisibiltyCollapsedConverter" />
    </Window.Resources>
    <Window.DataContext>
        <ViewModels:MainWindowViewModel/>
    </Window.DataContext>
    <DockPanel>
        <Menu x:Name="menu" VerticalAlignment="Top"  DockPanel.Dock="Top" >
            <MenuItem Header="New Deck" Command="{StaticResource NewDeckCommand}" />
            <MenuItem Header="Rewards" Command="{StaticResource ShowRewardsCommand}" />
            <MenuItem Header="Restore overlay window" Command="{StaticResource ShowOverlayCommand}"/>
        </Menu>
        <WrapPanel x:Name="deckEdit"  DockPanel.Dock="Top"         
                   Visibility="{Binding DeckEditVisible, Mode=TwoWay, Converter={StaticResource BoolToVisibiltyCollapsedConverter}}"
        >
            <Decks:EditDeck x:Name="editDeck" />
        </WrapPanel>
        <WrapPanel
                    Visibility="{Binding DeckListVisible, Mode=TwoWay, Converter={StaticResource BoolToVisibiltyCollapsedConverter}}"
            >
            <Decks:DeckList x:Name="deckList" HorizontalAlignment="Stretch"/>
        </WrapPanel>
        <tb:TaskbarIcon 
            x:Name="taskBarIcon"
            IconSource="/Resources/TrayIcon.ico"
            LeftClickCommand="{StaticResource NotifyIconLeftClickCommand}"
            LeftClickCommandParameter="{Binding ElementName=mainWindow}"
        >
            <tb:TaskbarIcon.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Test" />
                    <MenuItem Header="Exit" Command="{StaticResource ExitCommand}" />
                </ContextMenu>
            </tb:TaskbarIcon.ContextMenu>
        </tb:TaskbarIcon>
    </DockPanel>

</Window>
