<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESLTracker"
        xmlns:Decks="clr-namespace:ESLTracker.Controls.Decks" x:Class="ESLTracker.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="497.707" Width="280.045" Background="Transparent" 
        BorderThickness="2" 
        BorderBrush="Black" Loaded="Window_Loaded" Closing="Window_Closing">
    <StackPanel>
        <Menu x:Name="menu" VerticalAlignment="Top">
            <MenuItem Header="New Deck" Click="MenuItem_Click_1" />
            <MenuItem Header="Rewards" Click="MenuItem_Click" />
            <MenuItem Header="Restore overlay window" Click="MenuItem_Click_2" />
        </Menu>
        <WrapPanel x:Name="deckEdit" Visibility="Collapsed"><Decks:EditDeck /></WrapPanel> 
        <Decks:DeckList x:Name="deckList"/>
    </StackPanel>
</Window>
