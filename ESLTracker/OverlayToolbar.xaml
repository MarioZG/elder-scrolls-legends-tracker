<Window xmlns:Controls="clr-namespace:ESLTracker.Controls"  xmlns:Game="clr-namespace:ESLTracker.Controls.Game"  xmlns:Rewards="clr-namespace:ESLTracker.Controls.Rewards"  x:Class="ESLTracker.OverlayToolbar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESLTracker"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"  Title="Game" Height="322.805" Width="308.65" Topmost="True" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None" ShowInTaskbar="False">

    <StackPanel Orientation="Vertical" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Controls:OverlayWindowTitlebar />
        <TabControl x:Name="tabControl">
            <TabItem Header="Add game">
                <Game:EditGame />
            </TabItem>
            <TabItem Header="Add Rewards">
                <Rewards:RewardSet />
            </TabItem>
        </TabControl>

    </StackPanel>
</Window>
