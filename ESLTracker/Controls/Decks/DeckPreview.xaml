<UserControl xmlns:Cards="clr-namespace:ESLTracker.Controls.Cards"  x:Class="ESLTracker.Controls.Decks.DeckPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls.Decks"
             xmlns:ViewModels="clr-namespace:ESLTracker.ViewModels.Decks" 
             xmlns:Converters="clr-namespace:ESLTracker.Utils.Converters" 
             xmlns:Behaviors="clr-namespace:ESLTracker.Utils.Behaviors" 
             mc:Ignorable="d" 
             x:Name="deckPreview">
    <UserControl.DataContext>
        <ViewModels:DeckPreviewViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
    </UserControl.Resources>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <ComboBox 
                DockPanel.Dock="Right"
                Padding="5,5,5,10" 
                ItemsSource="{Binding Deck.History}" 
                SelectedItem="{Binding CurrentVersion}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Version, StringFormat={}v{0:mm}}" Style="{StaticResource DeckName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock Padding="10,5,5,5" Style="{StaticResource DeckName}" Text="{Binding Deck.Name}"/>
        </DockPanel>
        <DockPanel DockPanel.Dock="Left">
            <Border DockPanel.Dock="Bottom"
                    Style="{StaticResource EditDeck_FormSection}">
                <local:CardBreakdown                     
                    CardCollection="{Binding DataContext.CurrentVersion.Cards, Mode=TwoWay, ElementName=deckPreview}"/>
            </Border>
            <Border DockPanel.Dock="Bottom"
                    Style="{StaticResource EditDeck_FormSection}">
                <DockPanel>
                    <TextBlock 
                            DockPanel.Dock="Top"
                            Style="{StaticResource EditDeck_SectionHeader}"
                            Text="Cards"/>
                    <ScrollViewer>
                        <Cards:CardList 
                            DockPanel.Dock="Bottom"
                            DataContext="{Binding DataContext.CurrentVersion.Cards, ElementName=deckPreview}" />
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </DockPanel>
        <Border Style="{StaticResource EditDeck_FormSection}">
            <DockPanel>
                    <TextBlock 
                            DockPanel.Dock="Top"
                            Style="{StaticResource EditDeck_SectionHeader}"
                            Text="Changes history"/>
                    <ScrollViewer>
                        <local:DeckHistory 
                                DockPanel.Dock="Right"
                                DataContext="{Binding DataContext.ChangesHistory, ElementName=deckPreview, IsAsync=True}"
                                />
                    </ScrollViewer>
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
