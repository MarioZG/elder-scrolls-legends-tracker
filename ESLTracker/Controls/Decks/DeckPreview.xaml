<UserControl xmlns:Cards="clr-namespace:ESLTracker.Controls.Cards"  x:Class="ESLTracker.Controls.Decks.DeckPreview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls.Decks"
             xmlns:ViewModels="clr-namespace:ESLTracker.ViewModels.Decks" 
             xmlns:Converters="clr-namespace:ESLTracker.Utils.Converters" 
             mc:Ignorable="d" 
             x:Name="deckPreview"
             d:DesignHeight="300" d:DesignWidth="500">
    <UserControl.DataContext>
        <ViewModels:DeckPreviewViewModel/>
    </UserControl.DataContext>
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <Menu FontSize="14" DockPanel.Dock="Right" Visibility="{Binding DataContext.IsInEditMode, Converter={Converters:BoolToVisibilty}, ElementName=deckPreview}">
                <MenuItem Header="Cancel" Command="{Binding CommandCancel}"/>
                <MenuItem Header="Save" Command="{Binding CommandSave}"/>
            </Menu>
            <TextBlock Text="{Binding CurrentVersionString}" DockPanel.Dock="Right"/>
            <TextBlock Text="{Binding Deck.Name}"/>
        </DockPanel>
        <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
            <local:EditDeck 
                Deck="{Binding DataContext.Deck, ElementName=deckPreview, Mode=TwoWay}"
                Visibility="{Binding  DataContext.IsInEditMode, Converter={Converters:BoolToVisibilty}, ElementName=deckPreview}"
                />
            <Cards:CardList 
                DataContext="{Binding DataContext.CurrentVersion.Cards, ElementName=deckPreview}"
                Visibility="{Binding DataContext.IsInEditMode, Converter={Converters:BoolToVisibilty}, ConverterParameter=not, ElementName=deckPreview}"
                />
            <local:CardBreakdown />
        </StackPanel>
        <Cards:CardListEditor 
            Visibility="{Binding DataContext.IsInEditMode, Converter={Converters:BoolToVisibilty}, ElementName=deckPreview}"
            CardCollection="{Binding DataContext.CurrentVersion.Cards, ElementName=deckPreview}" />
    </DockPanel>
</UserControl>
