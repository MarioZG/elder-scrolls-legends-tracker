<UserControl x:Class="ESLTracker.Controls.Packs.OpenPack"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls.Packs"
             xmlns:ViewModels="clr-namespace:ESLTracker.ViewModels.Packs" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModels:OpenPackViewModel/>
    </UserControl.DataContext>
    <StackPanel>
        <TextBox Text="{Binding CardNames[0]}" />
        <TextBox Text="{Binding CardNames[1]}"/>
        <TextBox Text="{Binding CardNames[2]}"/>
        <TextBox Text="{Binding CardNames[3]}"/>
        <TextBox Text="{Binding CardNames[4]}"/>
        <TextBox Text="{Binding CardNames[5]}"/>
        <Button Content="Save" Command="{Binding CommandSave}" />
    </StackPanel>
</UserControl>
