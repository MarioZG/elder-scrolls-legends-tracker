<UserControl x:Class="ESLTracker.Controls.Settings.SettingsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls"
             xmlns:Properties="clr-namespace:ESLTracker.Properties"
             xmlns:ViewModel="clr-namespace:ESLTracker.ViewModels.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.DataContext>
        <ViewModel:SettingsPanelViewModel/>
    </UserControl.DataContext>
    <Grid>
        <CheckBox x:Name="checkBox" Content="Minimise on close" HorizontalAlignment="Left" Margin="48,34,0,0" VerticalAlignment="Top"
                  IsChecked="{Binding Path=MinimiseOnClose, Mode=TwoWay, Source={x:Static Properties:Settings.Default}}"
                  />
        <Button Command="{Binding CommandSaveButtonPressed}" Content="Button" HorizontalAlignment="Left" Margin="163,175,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</UserControl>
