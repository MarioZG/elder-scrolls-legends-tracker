<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls.Game"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:Enums="clr-namespace:ESLTracker.DataModel.Enums"
             xmlns:Controls="clr-namespace:ESLTracker.Controls" xmlns:Decks="clr-namespace:ESLTracker.Controls.Decks" x:Class="ESLTracker.Controls.Game.EditGame"
             xmlns:Converters="clr-namespace:ESLTracker.Utils.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <ObjectDataProvider x:Key="GameOutcomeEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:GameOutcome"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="GameTypeEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:GameType"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="OrderOfPlayEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:OrderOfPlay"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="PlayerRankEnum" MethodName="GetValues"
                            ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:PlayerRank"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <Converters:PlayRankedSelected x:Key="PlayRankedSelected" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="69*"/>
        </Grid.ColumnDefinitions>
        <Decks:DeckItem x:Name="selectedDeck" DataContext="{Binding DataModel.Tracker.Instance.ActiveDeck}" Grid.ColumnSpan="2"/>
        <Button x:Name="btnAdd" Content="Create" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="btnAdd_Click" Grid.Row="9" Height="20"/>
        <ComboBox x:Name="cbGameType" ItemsSource="{Binding Source={StaticResource GameTypeEnum}}"  Grid.Row="2" Grid.ColumnSpan="2" Margin="93,0,0,0"/>
        <ComboBox x:Name="cbOrderOfPlay" ItemsSource="{Binding Source={StaticResource OrderOfPlayEnum}}" Grid.Row="3" Grid.ColumnSpan="2" Margin="93,0,0,0.333"/>
        <ComboBox x:Name="cbOutcome" ItemsSource="{Binding Source={StaticResource GameOutcomeEnum}}" Grid.Row="4" Grid.Column="1"  />
        <Controls:PlayerRank Visibility="{Binding ElementName=cbGameType, Path=SelectedItem, Converter={StaticResource PlayRankedSelected}}" 
                   x:Name="cbOpponentRank"  Grid.Row="6" Grid.Column="1"  />
        <Controls:PlayerRank Visibility="{Binding ElementName=cbGameType, Path=SelectedItem, Converter={StaticResource PlayRankedSelected}}" 
                   x:Name="cbPlayerRank" Grid.Row="7" Grid.Column="1">
            
        </Controls:PlayerRank>

        <Controls:DeckClassSelector x:Name="opponentClass" Grid.ColumnSpan="2" Grid.Row="1" Height="Auto"/>
        <TextBox x:Name="txtOpponentName" TextWrapping="Wrap" Text="TextBox" Grid.Row="5" Grid.ColumnSpan="2" Margin="93,0.333,0,0.333"/>
        <Button x:Name="btnVicotry" Content="Victory" HorizontalAlignment="Left" Margin="110.667,22.667,0,0" VerticalAlignment="Top" Width="75" CommandParameter="Victory" Click="btnVicotry_Click" Grid.Column="1" Grid.Row="9" Height="20"/>
        <Button x:Name="btnDefeat" Content="Defeat" HorizontalAlignment="Left" Margin="9.667,22.667,0,0" VerticalAlignment="Top" Width="75" CommandParameter="Defeat" Click="btnVicotry_Click" Grid.Column="1" Grid.Row="9" Height="20"/>
        <Label x:Name="label" Content="Opponent name" Grid.Row="5"/>
        <Label x:Name="label1" Content="Opponent Rank" Grid.Row="6"/>
        <Label x:Name="label2" Content="Player Rank" Grid.Row="7"/>
        <CheckBox Visibility="{Binding ElementName=cbGameType, Path=SelectedItem, Converter={StaticResource PlayRankedSelected}}" 
                   x:Name="cbBonusRound" Content="Bonus round" Grid.Column="1" Grid.Row="8"/>


    </Grid>
</UserControl>
