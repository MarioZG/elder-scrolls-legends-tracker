<UserControl x:Class="ESLTracker.Controls.Rewards.AddSingleReward"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESLTracker.Controls.Rewards"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:Enums="clr-namespace:ESLTracker.DataModel.Enums"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <ObjectDataProvider x:Key="GuildEnum" MethodName="GetValues"
                                ObjectType="{x:Type System:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="Enums:Guild"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Image x:Name="imageClose" HorizontalAlignment="Right" VerticalAlignment="Top" Height="14" Width="14" Source="pack://application:,,,/Resources/closeicon.png" MouseDown="close_MouseDown" Panel.ZIndex="100" />
        <Image x:Name="image" Height="100" Width="100" Source="pack://application:,,,/Resources/RewardType/gold.png" MouseDown="image_MouseDown"/>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Opacity="60">
            <TextBox x:Name="txtQuantity" Text="qty" Visibility="Hidden" HorizontalAlignment="Stretch"/>
            <TextBox x:Name="txtComment" Text="comments" Visibility="Hidden" HorizontalAlignment="Stretch"/>
            <ComboBox x:Name="cbGuild" Visibility="Hidden" HorizontalAlignment="Stretch" ItemsSource="{Binding Source={StaticResource GuildEnum}}"/>
            <Button x:Name="btnAdd" Content="Add" Visibility="Hidden" Click="btnAdd_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
